@page
@model SistemaEducativo.Frontend.Pages.frontend.administrador.ActivarCuentasModel
@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Activar Cuentas de Usuario";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Activar/Desactivar Cuentas de Usuario</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Usuarios.Any())
                {
                    foreach (var usuario in Model.Usuarios)
                    {
                        <tr>
                            <td>@usuario.nombre</td>
                            <td>@usuario.email</td>
                            <td>
                                @if (usuario.Estado)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactiva</span>
                                }
                            </td>
                            <td>
                                <form method="post" asp-page-handler="CambiarRol">
                                    <input type="hidden" name="UsuarioId" value="@usuario.IdUsuario" />
                                    <select name="NuevoRol" class="form-select form-select-sm">
                                        <option value="1" selected="@(usuario.id_rol == 1)">Administrador</option>
                                        <option value="2" selected="@(usuario.id_rol == 2)">Docente</option>
                                        <option value="3" selected="@(usuario.id_rol == 3)">Estudiante</option>
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-primary mt-1">Cambiar Rol</button>
                                </form>
                            </td>
                            <td>
                                <form method="post" asp-page-handler="CambiarEstado">
                                    <input type="hidden" name="UsuarioId" value="@usuario.IdUsuario" />
                                    <input type="hidden" name="NuevoEstado" value="@(!usuario.Estado)" />
                                    @if (usuario.Estado)
                                    {
                                        <button class="btn btn-sm btn-danger">Desactivar</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-success">Activar</button>
                                    }
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td colspan="5" class="text-center">No hay usuarios inactivos.</td></tr>
                }
            </tbody>

        </table>
    </div>
</div>
