@page
@model SistemaEducativo.Frontend.Pages.frontend.administrador.ActivarCuentasModel
@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Activar Cuentas de Usuario";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Activar/Desactivar Cuentas de Usuario</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo de Usuario</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Rol</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Ejemplo de registros quemados -->
                <tr>
                    <td>Ana López</td>
                    <td>Estudiante</td>
                    <td>ana.lopez@cuc.ac.cr</td>
                    <td><span class="badge bg-danger">Inactiva</span></td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Estudiante</option>
                            <option>Profesor</option>
                            <option>Administrador</option>
                        </select>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-success">Activar</button>
                    </td>
                </tr>
                <tr>
                    <td>Carlos Méndez</td>
                    <td>Profesor</td>
                    <td>carlos.mendez@cuc.ac.cr</td>
                    <td><span class="badge bg-success">Activa</span></td>
                    <td>
                        <select class="form-select form-select-sm">
                            <option>Estudiante</option>
                            <option selected>Profesor</option>
                            <option>Administrador</option>
                        </select>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger">Desactivar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
