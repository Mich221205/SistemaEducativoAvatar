@page
@model SistemaEducativo.Frontend.Pages.frontend.administrador.CitaMatriculaModel
@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Configuración de Cita de Matrícula";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Configuración de Citas de Matrícula</h2>

    <div class="card shadow-lg p-4 mb-4">
        <form method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label"><strong>Año</strong></label>
                    <input type="number" class="form-control" name="anio" value="2025" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label"><strong>Periodo</strong></label>
                    <select class="form-select" name="periodo">
                        <option>I Cuatrimestre</option>
                        <option>II Cuatrimestre</option>
                        <option>III Cuatrimestre</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label"><strong>Fecha</strong></label>
                    <input type="date" class="form-control" name="fecha" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label"><strong>Hora</strong></label>
                    <input type="time" class="form-control" name="hora" />
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">Guardar Cita</button>
            </div>
        </form>
    </div>

    <!-- Tabla de citas ya configuradas -->
    <div class="card shadow-lg p-4">
        <h5>Listado de Citas Asignadas</h5>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Año</th>
                    <th>Periodo</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Ejemplo quemado -->
                <tr>
                    <td>2025</td>
                    <td>I Cuatrimestre</td>
                    <td>2025-02-15</td>
                    <td>08:00 AM</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Editar</button>
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                    </td>
                </tr>
                <tr>
                    <td>2025</td>
                    <td>II Cuatrimestre</td>
                    <td>2025-06-10</td>
                    <td>09:30 AM</td>
                    <td>
                        <button class="btn btn-sm btn-warning">Editar</button>
                        <button class="btn btn-sm btn-danger">Eliminar</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>