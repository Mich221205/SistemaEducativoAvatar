@page
@model SistemaEducativo.Frontend.Pages.frontend.administrador.ReportesEstuActivosModel
@{
    Layout = "_LayoutAdministrador";
    ViewData["Title"] = "Reporte de Estudiantes Activos";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Reporte de Estudiantes Activos</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Carné</th>
                    <th>Nombre</th>
                    <th>Fecha Ingreso</th>
                    <th>Email</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var est in Model.EstudiantesActivos)
                {
                    <tr>
                        <td>@est.Carnet</td>
                        <td>@est.Nombre</td>
                        <td>@est.FechaIngreso.ToString("dd/MM/yyyy")</td>
                        <td>@est.Email</td>
                        <td>
                            @if (est.Estado)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>