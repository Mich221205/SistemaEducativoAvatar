@page
@model SistemaEducativo.Frontend.Pages.frontend.profesor.ActualizarDatosModel
@{
    Layout = "_LayoutProfesor";
    ViewData["Title"] = "Actualizar Datos Personales";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Actualizar Datos Personales</h2>

    <form method="post" class="card shadow-lg p-4">
        <!-- Cédula -->
        <div class="mb-3">
            <label class="form-label"><strong>Cédula</strong></label>
            <input type="text" asp-for="DatosProfesor.Cedula" class="form-control" />
        </div>

        <!-- Nombre -->
        <div class="mb-3">
            <label class="form-label"><strong>Nombre</strong></label>
            <input type="text" asp-for="DatosProfesor.Nombre" class="form-control" />
        </div>

        <!-- Correo -->
        <div class="mb-3">
            <label class="form-label"><strong>Correo Institucional</strong></label>
            <input type="email" asp-for="DatosProfesor.CorreoPersonal" class="form-control" />
        </div>

        <!-- Teléfono -->
        <div class="mb-3">
            <label class="form-label"><strong>Teléfono</strong></label>
            <input type="text" asp-for="DatosProfesor.Telefono" class="form-control" />
        </div>

        <!-- Correo personal -->
        <div class="mb-3">
            <label class="form-label"><strong>Correo Personal</strong></label>
            <input type="email" asp-for="DatosProfesor.CorreoPersonal" class="form-control" />
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success">Actualizar</button>
        </div>
    </form>
</div>
