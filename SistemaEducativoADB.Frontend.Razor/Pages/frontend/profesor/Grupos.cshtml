@page
@model SistemaEducativo.Frontend.Pages.frontend.profesor.GruposModel
@{
    Layout = "_LayoutProfesor";
    ViewData["Title"] = "Grupos Asignados";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Grupos Asignados</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Código Grupo</th>
                    <th>Curso</th>
                    <th>Aula</th>
                    <th>Cupo Maximo</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Grupos != null && Model.Grupos.Any())
                {
                    foreach (var grupo in Model.Grupos)
                    {
                        <tr>
                            <td>@grupo.IdGrupo</td>
                            <td>@grupo.Materia.Nombre</td>
                            <td>@grupo.Aula</td>
                            <td>@grupo.CupoMax</td>
                            
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">No hay datos disponibles</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
