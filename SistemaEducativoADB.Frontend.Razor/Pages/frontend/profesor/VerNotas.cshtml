@page
@model SistemaEducativo.Frontend.Pages.frontend.profesor.VerNotasModel
@{
    Layout = "_LayoutProfesor";
    ViewData["Title"] = "Ver Notas";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Notas de Estudiantes</h2>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Carné</th>
                    <th>Nombre</th>
                    <th>Materia</th>
                    <th>Grupo</th>
                    <th>Nota</th>
                    <th>Condición</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nota in Model.Notas)
                {
                    <tr>
                        <td>@nota.Carnet</td>
                        <td>@nota.Nombre</td>
                        <td>@nota.Materia</td>
                        <td>@nota.Grupo</td>
                        <td>@nota.Nota</td>
                        <td>
                            @if (nota.Condicion == "Aprobado")
                            {
                                <span class="badge bg-success">Aprobado</span>
                            }
                            else if (nota.Condicion == "Reprobado")
                            {
                                <span class="badge bg-danger">Reprobado</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Cursando</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>